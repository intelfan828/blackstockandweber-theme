{% if section.settings.enable_gdpr_bar == true %}

  <div class="gdpr-bar" data-key="{{ section.settings.gdpr_bar_key}}">
      <div class="container container--fluid">
        {{ section.settings.gdpr_bar_text}}
        <button type="button" class="gdpr-bar__close">
          {% include 'icon_cross_01' %}
        </button>
      </div>
    </div>

{% endif %}

  
  {% schema %}
  {
    "name": {
      "en": "GDPR Bar",
      "ja": "データ保護規則同意バー"
    },  
    "settings": [  
      {
        "type": "checkbox",
        "id": "enable_gdpr_bar",
        "label": {
          "en": "Enable GDPR bar?",
          "ja": "データ保護規則同意バーを表示する"
        },
        "default": false
      },
      {
        "type": "richtext",
        "id": "gdpr_bar_text",
        "label": {
          "en": "Copy",
          "ja": "コピー"
        }
      },
      {
        "type": "text",
        "id": "gdpr_bar_key",
        "label": {
          "en": "Key",
          "ja": "キー"
        },
        "info": {
          "en": "Used as a cookie's key",
          "ja": "クッキーのキーとして使用されます"
        }
      }     
    ]
  }
  {% endschema %}