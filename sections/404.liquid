<style>
  .page-404 h1 {
    font-size:1.8rem;
    color: #684A26;
    text-align: center;
    font-family: OPTIRomanaRoman-Normal;
    margin-top:5rem;
    margin-bottom:1rem;
  }

  .page-404 p {
    color: #684A26;
    text-align: center;
    margin: auto;
    margin-bottom: 3rem;
    max-width: 300px;
    font-size:12px;
  }
  
  .page-404 a.button--primary {
    width: max-content;
    padding-left: 2rem;
    padding-right: 2rem;
    margin: auto;
    margin-bottom: 5rem;
    min-width: 300px;
  }
</style>
<div class="page-404">
  <h1>{{ 'general.404.title' | t }}</h1>
  <p>{{ section.settings.subtext }}</p>
  <a href="{{ section.settings.button_url }}" class="button button--primary button--primary--dark-sand">{{ section.settings.button_text }}</a>
</div>

{% schema %}
{
  "name": "404 Page",
  "settings": [
    {
      "type": "image_picker",
      "id": "background_image",
      "label": "Background image"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Page Not Found"
    },
    {
      "type": "text",
      "id": "subtext",
      "label": "Subtext"
    },
    {
      "type": "text",
      "id": "button_text",
      "label": "Button Text",
      "default": "SHOP THE LATEST COLLECTION"
    },
    {
      "type": "url",
      "id": "button_url",
      "label": "URL"
    }
  ],
  "presets": [
    {
      "name": "404 Page"
    }
  ]
}
{% endschema %}