<section class="landing-hero-section  {% if section.settings.number_of_columns == "1" %}hero-section--single{% endif %}">
  <div class="container container--full">
   
      {%- if section.settings.hero_product != empty -%}
        {%- assign hero_product = all_products[section.settings.hero_product] -%}
        {%- assign hero_url = hero_product.url | append: "?variant=" | append: hero_product.variants.first.id -%}
      {%- else -%}
        {%- assign hero_url = section.settings.hero_link -%} <!-- Fallback to hero_link if no product is selected -->
      {%- endif -%}
    {% if section.settings.hero_product != blank or section.settings.hero_link != blank %}
      <a href="{{ hero_url }}">
    {% endif %}
      <div class="row" style="background-color: {{section.settings.background_color}};">
        <!-- {% if section.blocks.size == 1 %}
        <div class="col col-12">
          
        </div>
        {% endif %} -->
        {%- for block in section.blocks -%}
          <div class="col {% if section.settings.number_of_columns == "2" %}col-6 col--right{% else %}col-12{% endif %} col-md-12">
            <div class="hero-section__image-wrapper {% if section.settings.tall_image_mobile %}tall-image-mobile{% endif %}">
              {% if block.settings.alt contains '.mp4' %}
                <div class="video-wrapper">
                  <video src="{{ block.settings.alt }}" loop controls poster="{{ block.settings.image | img_url: '2400x2400' }}" playsinline muted autoplay></video>
                </div>
              {% else %}
                <picture>
                  {% if block.settings.image_sm != blank %}
                  <source srcset="{{ block.settings.image_sm | img_url: '1000x1000' }}" media="(max-width: 600px)">
                  {% endif %}
                  <img src="{{ block.settings.image | img_url: '2400x2400' }}" alt="{{ block.settings.alt }}">
                </picture>
              {% endif %}
            </div>
            {% if block.settings.headline %}
              <div class="hero-headline {% if block.settings.headline_position == "top-left" %}top-left-headline
                {% elsif block.settings.headline_position == "center" %} center-headline{% endif %}
                {% if block.settings.headline_position_mobile == "center" %} mobile-center-headline{% endif %}">
                 <span class="h2 {% if block.settings.headline_font == "roman" %}roman{% elsif block.settings.headline_font == "grotesk"%}grotesk {% endif %}" style="color:{{ block.settings.text_color }};">{{ block.settings.headline }}</span>
                  <span class="hero-sub-text" style="color:{{ block.settings.subtitle_text_color }};">{{ block.settings.sub-text }}</span>
              </div>
             
              {% endif %}
          </div>
          {%- if section.settings.number_of_columns == "1" and forloop.index0 == 0 -%}
          {% break %}
          {%- endif -%}
        {%- endfor -%}
      </div>
      <div class="hero-banner__headline{% if section.settings.solid_text_background %} solid-text-background{% endif %}
        {% if section.settings.solid_text_background_mobile %} solid-text-background-mobile{% endif %}
        {% if section.settings.button_alignment_mobile == "center" %} center-headline{% endif %}" style="color: {{ section.settings.text_color }}">
        

          {% if section.settings.hero_subtitle != blank %}
            <p class="hero-banner__subtitle {% if section.settings.text_alignment == "end" %}text-align-right{% endif %}">
              {{ section.settings.hero_subtitle }}
            </p>
          {% endif %}

          {% if section.settings.hero_title != blank %}
            <div class="hero-banner__title {% if section.settings.text_alignment == "end" %}text-align-right{% endif %}">
              {{ section.settings.hero_title }}
            </div>
          {% endif %}

          {% if  section.settings.hero_button != blank%}
            <button class="button button--primary hero__button 
                {% if section.settings.solid_button %} solid {% endif %}
                {% if section.settings.button_alignment == 'end' %}end-aligned{% endif %}
              " 
              style="color: {{ section.settings.button_text_color }}; border-color:{{ section.settings.button_color }}">
            {{ section.settings.hero_button }}
            </button>
          {% endif %}
        
      </div>
    {% if section.settings.hero_product != blank or section.settings.hero_link != blank %}
    </a>
    {% endif %}
  </div>
</section>

